@page
@model Mot_Marius_Lab2.Pages.Borrowings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Borrowing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Member Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrowing.Member.FullName)
        </dd>
        <dt class="col-sm-2">
            Book Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrowing.Book.Title)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrowing.Book.Author.FullName)
        </dd>
        <dt class="col-sm-2">
            Return Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrowing.ReturnDate)
        </dd>
    </dl>
</div>
